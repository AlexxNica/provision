{
    "Name": "redhat-7.0-install",
    "TenantId": 1,
    "OS": {
        "Name": "redhat-7.0"
    },
    "Kernel": "images/pxeboot/vmlinuz",
    "Initrds": [ "images/pxeboot/initrd.img" ],
    "BootParams": "ksdevice=bootif ks={{.Machine.Url}}/compute.ks method={{.Env.OS.InstallUrl}} inst.geoloc=0",
    "RequiredParams": [
        "logging_servers",
        "ntp_servers",
        "operating-system-disk",
        "provisioner-default-password-hash",
        "proxy-servers",
        "rebar-access_keys",
        "rebar-machine_key",
        "use-proxy"
    ],
    "Templates": [
        {
            "Name": "pxelinux",
            "Path": "pxelinux.cfg/{{.Machine.HexAddress}}",
            "ID": "default-pxelinux.tmpl"
        },
        {
            "Name": "elilo",
            "Path": "{{.Machine.HexAddress}}.conf",
            "ID": "default-elilo.tmpl"
        },
        {
            "Name": "ipxe",
            "Path": "{{.Machine.Address}}.ipxe",
            "ID": "default-ipxe.tmpl"
        },
        {
            "Name": "compute.ks",
            "Path": "{{.Machine.Path}}/compute.ks",
            "ID": "centos-7.ks.tmpl"
        },
        {
            "Name": "rebar_join.sh",
            "Path": "{{.Machine.Path}}/rebar_join.sh",
            "ID": "rebar-join.sh.tmpl"
        }
    ]
}
